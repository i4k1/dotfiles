syntax on
set number
set ruler
set wrap
set laststatus=2
set colorcolumn=72
set scrolloff=8
set showmode
set showcmd
set nomousehide
colorscheme industry
set background=dark
set go=c
set mouse=a
set title

set encoding=utf-8
set fileformat=unix
set fileformats=unix

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab

set backspace=indent,eol,start
set clipboard+=unnamedplus

set nobackup
set noswapfile
set viminfo=""

set ignorecase
set incsearch
set hlsearch

set list
set listchars=tab:>.
set visualbell
